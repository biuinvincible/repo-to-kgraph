#!/usr/bin/env python3
"""
Standalone entry point for the interactive CLI shell.

Usage: ./interactive_shell
"""

import sys
import os
import asyncio
from pathlib import Path

# Add the src directory to Python path
repo_root = Path(__file__).parent
src_path = repo_root / "src"
sys.path.insert(0, str(src_path))

from repo_kgraph.cli.interactive import InteractiveCLI


async def main():
    """Main entry point for the interactive shell."""
    cli = InteractiveCLI()
    try:
        await cli.initialize()
        await cli.run()
    except KeyboardInterrupt:
        print("\nüëã Thanks for using Repository Knowledge Graph!")
    except Exception as e:
        print(f"‚ùå Failed to start interactive CLI: {e}")
        sys.exit(1)
    finally:
        await cli.cleanup()


if __name__ == "__main__":
    asyncio.run(main())