# Repository Knowledge Graph System Configuration
# Copy this file to .env and customize as needed

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Neo4j Configuration
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_PREFIX=repo_

# ==========================================
# EMBEDDING CONFIGURATION
# ==========================================

# Embedding Provider: ollama, sentence_transformers, openai
EMBEDDING_PROVIDER=ollama

# Model Configuration
EMBEDDING_MODEL=embeddinggemma
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_TEXT_LENGTH=8192
OLLAMA_CONCURRENT_REQUESTS=10

# OpenAI Configuration (if using openai provider)
# OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# Logging
LOG_LEVEL=INFO
VERBOSE=false

# Data Directories
DATA_DIR=./data
LOG_DIR=./logs

# Performance Settings
MAX_CONCURRENT_FILES=10
BATCH_SIZE=1000
MAX_FILE_SIZE_MB=10.0

# ==========================================
# API SERVER CONFIGURATION
# ==========================================

# Server Settings
API_HOST=localhost
API_PORT=8000
API_RELOAD=false

# ==========================================
# PARSING CONFIGURATION
# ==========================================

# Default Languages to Include (comma-separated, empty = all)
# INCLUDE_LANGUAGES=python,javascript,typescript,java

# Default Exclude Patterns (comma-separated)
EXCLUDE_PATTERNS=*.pyc,__pycache__/*,node_modules/*,*.min.js,*.min.css,build/*,dist/*,.git/*,venv/*,.venv/*

# Repository Processing
INCREMENTAL_PARSING=false
GENERATE_EMBEDDINGS=true